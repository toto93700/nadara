 <script>
  document.addEventListener('DOMContentLoaded', function () {
    var button = document.getElementById('show-webform-button');
	var span = document.getElementById('show-webform-span');
    var webformContent = document.getElementById('webform-content');
    
    button.addEventListener('click', function () {
      webformContent.style.display = 'block';
      
      // Scroll to the webform content
      webformContent.scrollIntoView({ behavior: 'smooth' });
	  button.style.display='none'
	  span.style.display='none'
    });
  });
</script>
