<section>
	<div class="container">
		<div class="row">
			<h1 class="text-center fw-bold">{{ content.field_name }} 	</h1>

			<p class="text-center h1" style="">{{content.field_price['#items'].value|number_format(0, '.', ' ', 3) }} € </br>{{ (content.field_price['#items'].value * 250)|number_format(0, '.', ' ', 3) }}
 DZD</p>
			<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
				<div class="carousel-inner">
					{% for img in content.field_image['#items'] %}
						{% set image_url = file_url(img.entity.uri.Value[0].value) %}
						<div class="carousel-item {{ loop.first ? 'active' : '' }}">
							<div class="img-container">
								<img class="img img-fluid mx-auto d-block" src="{{ image_url }}" alt="...">
							</div>
						</div>
					{% endfor %}
				</div>

				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>
			<ul class="d-flex justify-content-center indicator">
				{% for img in content.field_image['#items'] %}
					{% set image_url = file_url(img.entity.uri.Value[0].value) %}
					<li data-bs-target="#carouselExampleControls" data-bs-slide-to="{{ loop.index0 }}" class="{{ loop.first ? 'active' : '' }}">
						<div class="carousel-indicator-ps" style="background-image: url('{{ image_url }}');"></div>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</section>

