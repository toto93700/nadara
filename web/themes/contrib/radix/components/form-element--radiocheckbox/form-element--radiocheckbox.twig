{#
/**
 * @file
 * Template for a checkbox form element.
 *
 * @ingroup themeable
 */
#}
{% set form_element__radiocheckbox_utility_classes = form_element__radiocheckbox_utility_classes ? form_element__radiocheckbox_utility_classes : [] %}

{%
  set classes = [
    'js-form-item', 
    'form-item', 
    'form-check',
    'form-type-' ~ type|clean_class, 
    'js-form-type-' ~ type|clean_class, 
    'form-item-' ~ name|clean_class, 
    'js-form-item-' ~ name|clean_class, 
    title_display not in ['after', 'before'] ? 'form-no-label', 
    disabled == 'disabled' ? 'form-disabled', 
    errors is not empty ? 'form-item--error', 
  ]|merge(form_element__radiocheckbox_utility_classes)
%}
{%
  set description_classes = [
    'description', 
    'form-text', 
    'text-muted', 
    description_display == 'invisible' ? 'visually-hidden',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ children }}

  {{ label }}

  {# Display errors if exist #}
  {% if errors %}
    <div class="invalid-feedback">
      {{ errors }}
    </div>
  {% endif %}

  {# Show description content if exist #}
  {% if description.content %}
    <small{{ description.attributes.addClass(description_classes) }}>
      {{ description.content }}
    </small>
  {% endif %}
</div>