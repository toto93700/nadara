{#
/**
 * @file
 * Template for a Page Footer component.
 *
#}
{% set footer_attributes = footer_attributes ?: create_attribute() %}
{% set footer_utility_classes = footer_utility_classes ? footer_utility_classes : [] %}

{% 
  set footer_classes = [
  'page__footer',
  ]|merge(footer_utility_classes) 
%}

{% if page.footer %}
  <footer {{ footer_attributes.addClass(footer_classes) }}>
    <div class="container">
      <div class="d-flex flex-wrap justify-content-md-center align-items-md-center ">
        {% block page_inner_footer %}
          {{ page.footer }}
        {% endblock %}
      </div>
    </div>
  </footer>
{% endif %}

