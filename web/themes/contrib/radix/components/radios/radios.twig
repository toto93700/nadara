{#
/**
 * @file
 * Theme override for a 'radios' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The rendered radios.
 * - radios_utility_classes: (optional) An array of extra classes for design styling.
 *
 * @see template_preprocess_radios()
 */
#}
{% set radios_utility_classes = radios_utility_classes ? radios_utility_classes : [] %}
{% set 
  radios_classes = [
    'form-radios'
  ]|merge(radios_utility_classes) 
%}

<div{{attributes.addClass(radios_classes)}}>
  {{ children }}
</div>
