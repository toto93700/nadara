{#
/**
 * @file
 * Template for a Table component.
 *
 * Available config:
 * - table_utility_classes: An array of utility classes.
 * - @see https://getbootstrap.com/docs/5.3/content/tables/
 */
#}

{% block table %}
{% set 
  table_classes = [
    'table',
    striped ? 'table-striped',
  ]|merge(table_utility_classes ? table_utility_classes : []) 
%}

  <table{{ attributes.addClass(table_classes) }}>
    {% block table_caption %}
      {% if caption %}
        <caption>{{ caption }}</caption>
        {% endif %}
    {% endblock %}

    {% block table_colgroup %}
      {% for colgroup in colgroups %}
        {% if colgroup.cols %}
          <colgroup{{ colgroup.attributes }}>
            {% for col in colgroup.cols %}
              <col{{ col.attributes }} />
            {% endfor %}
          </colgroup>
        {% else %}
          <colgroup{{ colgroup.attributes }} />
        {% endif %}
      {% endfor %}
    {% endblock %}

    {% block table_header %}
      {% if header %}
          <thead>
            <tr>
              {% for cell in header %}
                {%
                  set cell_classes = [
                  cell.active_table_sort ? 'is-active',
                ]
                %}
                <{{ cell.tag }}{{ cell.attributes.addClass(cell_classes) }}>
                {{- cell.content -}}
              </{{ cell.tag }}>
              {% endfor %}
            </tr>
          </thead>
      {% endif %}
    {% endblock %}

    {% block table_body %}
      {% if rows %}
        <tbody>
          {% for row in rows %}
            {%
              set row_classes = [
                row.classes ? row.classes : [],
                not no_striping ? cycle(['odd', 'even'], loop.index0),
              ]|merge(row.extra_classes ? row.extra_classes : [])
            %}
            <tr{{ row.attributes.addClass(row_classes) }}>
              {% for cell in row.cells %}
                {%
                  set cell_classes = [
                    cell.classes ? cell.classes : [],
                  ]|merge(cell.extra_classes ? cell.extra_classes : [])
                %}
                <{{ cell.tag }}{{ cell.attributes.addClass(cell_classes) }}>
                {{- cell.content -}}
                </{{ cell.tag }}>
              {% endfor %}
            </tr>
          {% endfor %}
        </tbody>
      {% elseif empty %}
        <tbody>
        <tr class="odd">
          <td colspan="{{ header_columns }}" class="empty message">{{ empty }}</td>
        </tr>
        </tbody>
      {% endif %}
    {% endblock %}

    {% block table_footer %}
      {% if footer %}
        <tfoot>
          {% for row in footer %}
          <tr{{ row.attributes }}>
            {% for cell in row.cells %}
              <{{ cell.tag }}{{ cell.attributes }}>
              {{- cell.content -}}
              </{{ cell.tag }}>
            {% endfor %}
            </tr>
          {% endfor %}
        </tfoot>
      {% endif %}
    {% endblock %}
  </table>
{% endblock %}